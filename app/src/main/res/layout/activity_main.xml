<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp">

        <Button
            android:id="@+id/LogIn"
            android:layout_width="61dp"
            android:layout_height="53dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_baseline_account_circle_24"
            android:backgroundTint="#b9ffe0"
            tools:layout_editor_absoluteX="251dp"
            tools:layout_editor_absoluteY="606dp"
            android:onClick="LogIn"
            />

        <Button
            android:id="@+id/Gallery"
            android:layout_width="61dp"
            android:layout_height="53dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_baseline_photo_library_24"
            android:backgroundTint="#b9ffe0"
            android:fontFamily="@font/abril_fatface"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="606dp" />

        <Button
            android:id="@+id/Booked"
            android:layout_width="61dp"
            android:layout_height="53dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_baseline_calendar_month_24"
            android:backgroundTint="#b9ffe0"
            android:fontFamily="@font/abril_fatface"
            tools:layout_editor_absoluteX="175dp"
            tools:layout_editor_absoluteY="606dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="81dp"
            android:layout_height="26dp"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:text="@string/LogIn"
            android:textColor="#5C8C87"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="568dp" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="78dp"
            android:layout_height="26dp"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:text="@string/Gallery"
            android:textColor="#5C8C87"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="568dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="92dp"
            android:layout_height="42dp"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:text="@string/BookNow"
            android:textColor="#5C8C87"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="258dp"
            tools:layout_editor_absoluteY="564dp" />
    </LinearLayout>

</LinearLayout>